@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom CSS for this page */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5f5; /* Light Gray */
            color: #333; /* Dark Gray */
        }

        .container {
            margin-top: 50px;
            text-align: center;
        }

        h1.display-4 {
            font-size: 3.5em;
            color: #2c3e50; /* Dark Blue */
            margin-bottom: 20px;
        }

        p.lead {
            font-size: 1.5em;
            color: #7f8c8d; /* Gray */
            margin-bottom: 30px;
        }

        .btn-custom {
            background-color: #28a745; /* Green */
            color: #fff;
            border: none;
            padding: 15px 30px;
            border-radius: 50px;
            font-size: 1.2em;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

            .btn-custom:hover {
                background-color: #218838; /* Darker Green */
                transform: translateY(-3px);
            }

        img {
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            margin-top: 30px;
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="display-4">Welcome to KhumaloCraft Emporium</h1>
        <p class="lead">Your one-stop destination for premium handmade crafts.</p>
        <a asp-controller="Home" asp-action="Work" class="btn btn-custom btn-lg">Explore Now</a>
        <img src="~/images/back.png" alt="KhumaloCraft Emporium Background" class="img-fluid">
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
